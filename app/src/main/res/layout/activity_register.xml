<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:background="@drawable/bg"
    android:paddingBottom="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    tools:context="com.rinawkw.fp_imk.RegisterActivity">


    <!-- Login progress -->
    <ProgressBar
        android:id="@+id/login_progress"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:visibility="gone" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/logo" />

    <LinearLayout
        android:id="@+id/login_form"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/email_login_form"
            android:layout_width="match_parent"
            android:layout_height="288dp"
            android:elevation="5dp"
            android:background="@drawable/tran"
            android:orientation="vertical"
            android:paddingBottom="10dp"
            android:paddingTop="10dp">

            <EditText
                android:id="@+id/nama"
                android:layout_width="282dp"
                android:layout_height="44dp"
                android:layout_gravity="center"
                android:background="@drawable/namain"
                android:fontFamily="sans-serif"
                android:hint="nama"
                android:maxLines="1"
                android:paddingLeft="55dp"
                android:layout_marginTop="10dp"
                android:textColorLink="@color/colorPrimaryDark" />

            <AutoCompleteTextView
                android:id="@+id/email"
                android:layout_width="282dp"
                android:layout_height="44dp"
                android:layout_gravity="center"
                android:fontFamily="sans-serif"
                android:hint="email"
                android:layout_marginTop="10dp"
                android:paddingLeft="55dp"
                android:textColorLink="@color/colorPrimaryDark"
                android:background="@drawable/imelin"
                android:inputType="textEmailAddress"
                android:maxLines="1"
                android:singleLine="true" />

            <AutoCompleteTextView
                android:id="@+id/password"
                android:layout_width="282dp"
                android:layout_height="44dp"
                android:layout_gravity="center"
                android:fontFamily="sans-serif"
                android:hint="kata sandi"
                android:textColorLink="@color/colorPrimaryDark"
                android:background="@drawable/passin"
                android:imeActionId="@+id/login"
                android:layout_marginTop="10dp"
                android:paddingLeft="55dp"
                android:inputType="textPassword"
                android:maxLines="1"
                android:singleLine="true" />

            <AutoCompleteTextView
                android:id="@+id/password2"
                android:layout_width="282dp"
                android:layout_height="44dp"
                android:layout_gravity="center"
                android:fontFamily="sans-serif"
                android:hint="ulang kata sandi"
                android:textColorLink="@color/colorPrimaryDark"
                android:background="@drawable/passin"
                android:imeActionId="@+id/login"
                android:layout_marginTop="10dp"
                android:paddingLeft="55dp"
                android:inputType="textPassword"
                android:maxLines="1"
                android:singleLine="true" />

            <Button
                android:id="@+id/email_sign_up_button"
                style="?android:textAppearanceSmall"
                android:layout_width="255dp"
                android:layout_height="33dp"
                android:layout_gravity="center"
                android:layout_marginTop="16dp"
                android:background="#2574A9"
                android:fontFamily="sans-serif"
                android:text="DAFTAR"
                android:textColor="@color/common_google_signin_btn_text_dark_default"
                android:textSize="18dp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:paddingBottom="10dp"
                android:layout_marginTop="30dp">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif"
                    android:text="Sudah punya akun?  "
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/masuk"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:fontFamily="sans-serif"
                    android:text="@string/masuk"
                    android:textColor="#ffff"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </LinearLayout>


        </LinearLayout>
    </LinearLayout>
</LinearLayout>
